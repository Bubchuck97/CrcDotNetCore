
@{
    ViewData["Title"] = "Measurements";
}

<environment include="Development">
    <script src="~/js/newMeasurementSection.js"></script>
    <script src="~/js/measurementsController.js"></script>
</environment>


<h1>Measurements</h1>
<div class="form-group">
    <div class="form-group">
        <label for="measurements_nameInput">Name</label>
        <input type="text" class="form-control" id="measurements_nameInput" placeholder="Enter Name" />
    </div>
    <div class="form-group">
        <label for="measurements_valueInput">Value</label>
        <input type="number" class="form-control" id="measurements_valueInput" placeholder="Enter Value" />
    </div>
    <button type="button" class="btn btn-primary" id="measurements_addBtn">Add</button>
</div>

<div class="container">
    <div class="row bg-light">
        <div class="col-sm">
            Id
        </div>
        <div class="col-sm">
            Name
        </div>
        <div class="col-sm">
            Value
        </div>
        <div class="col-sm">
            CreatedBy
        </div>
        <div class="col-sm">
            @*Empty for remove*@
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            First
        </div>
        <div class="col-sm">
            Second
        </div>
        <div class="col-sm">
            Third
        </div>
        <div class="col-sm">
            Fourth
        </div>
        <div class="col-sm">
            <a href="#">Remove</a>
        </div>
    </div>
</div>

